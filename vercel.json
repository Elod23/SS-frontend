{
  "version": 2,
  "env": {},
  "builds": [
    {
      "src": "proxy/build/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["proxy/build/**"] }
    },
    {
      "src": "client/build/**",
      "use": "@vercel/static",
      "config": { "includeFiles": ["client/build/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "proxy/build/index.js"
    },
    {
      "src": "/",
      "dest": "client/build/index.html"
    },
    {
      "src": "/(.+)",
      "dest": "client/build/$1"
    }
  ]
}
